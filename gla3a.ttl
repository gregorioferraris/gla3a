@prefix lv2:  <http://lv2plug.in/ns/lv2core#> .
@prefix ui:   <http://lv2plug.in/ns/extensions/ui#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix pset: <http://lv2plug.in/ns/ext/presets#> .
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .

<http://moddevices.com/plugins/mod-devel/gla3a>
    a lv2:Plugin ;
    lv2:optionalFeature lv2:hardRTCapable ;
    doap:name "GLA3A Leveling Amplifier" ;
    doap:maintainer [
        doap:name "Your Name" ;
        doap:mbox <mailto:your.email@example.com> ;
    ] ;
    doap:homepage <http://yourwebsite.com> ;
    doap:license <http://opensource.org/licenses/MIT> ;

    lv2:port [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "peak_reduction" ;
        lv2:name "Peak Reduction" ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "gain" ;
        lv2:name "Gain" ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "meter" ;
        lv2:name "Meter" ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [ rdfs:label "Gain Reduction" ; lv2:value 0.0 ] ,
                       [ rdfs:label "Output" ; lv2:value 1.0 ] ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "bypass" ;
        lv2:name "Bypass" ;
        lv2:portProperty lv2:toggled ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 4 ;
        lv2:symbol "ms_mode_active" ;
        lv2:name "M/S Mode" ;
        lv2:portProperty lv2:toggled ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 5 ; # NUOVA PORTA
        lv2:symbol "sidechain_hf_freq" ;
        lv2:name "Sidechain HF Freq" ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        units:unit units:hz ;
        # Mappa 0-1 a un range di frequenze, es. 200 Hz a 10 kHz
        # La GUI si occuper√† della mappatura visiva
    ] , [
        a lv2:InputPort , lv2:ControlPort ;
        lv2:index 6 ; # NUOVA PORTA
        lv2:symbol "ratio_mode" ;
        lv2:name "Ratio Mode" ;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 3.0 ; # 0=3:1, 1=6:1, 2=9:1, 3=Limiter
        lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [ rdfs:label "3:1" ; lv2:value 0.0 ] ,
                       [ rdfs:label "6:1" ; lv2:value 1.0 ] ,
                       [ rdfs:label "9:1" ; lv2:value 2.0 ] ,
                       [ rdfs:label "Limit" ; lv2:value 3.0 ] ;
    ] , [
        a lv2:OutputPort , lv2:ControlPort ;
        lv2:index 7 ;
        lv2:symbol "output_rms" ;
        lv2:name "Output RMS" ;
        lv2:designation units:db ;
        lv2:default -60.0 ;
        lv2:minimum -90.0 ;
        lv2:maximum 0.0 ;
        lv2:portProperty lv2:notOnGUI ;
    ] , [
        a lv2:OutputPort , lv2:ControlPort ;
        lv2:index 8 ;
        lv2:symbol "gain_reduction_meter" ;
        lv2:name "Gain Reduction Meter" ;
        lv2:designation units:db ;
        lv2:default 0.0 ;
        lv2:minimum -30.0 ;
        lv2:maximum 0.0 ;
        lv2:portProperty lv2:notOnGUI ;
    ] , [
        a lv2:InputPort , lv2:AudioPort ;
        lv2:index 9 ;
        lv2:symbol "audio_in_L" ;
        lv2:name "Audio Input L" ;
    ] , [
        a lv2:InputPort , lv2:AudioPort ;
        lv2:index 10 ;
        lv2:symbol "audio_in_R" ;
        lv2:name "Audio Input R" ;
    ] , [
        a lv2:OutputPort , lv2:AudioPort ;
        lv2:index 11 ;
        lv2:symbol "audio_out_L" ;
        lv2:name "Audio Output L" ;
    ] , [
        a lv2:OutputPort , lv2:AudioPort ;
        lv2:index 12 ;
        lv2:symbol "audio_out_R" ;
        lv2:name "Audio Output R" ;
    ] .
